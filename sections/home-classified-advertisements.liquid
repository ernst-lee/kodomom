<section>
    <h1>
        <i class="fa fa-paw dolce-pointcolor" aria-hidden="true"></i>
        {{ 'sections.home.home_classified_advertisements_title' | t }}
    </h1>
    <div class="row flex-wrapper">

        {%- if section.blocks != blank -%}
            {%- for block in section.blocks -%}
            {%- if block.settings.image != blank -%}
            <div class="pickup-cell-col2">
                <a href="
                    {%- if block.settings.image_url != blank -%}
                        {{ block.settings.image_url }}
                    {%- else -%}
                        #
                    {%- endif -%}
                ">
                    <div class="index-pickup">
                        <img src="{{ block.settings.image | img_url:'390x160' }}" alt="">
                        <div class="index-pickup-desc">{{ block.settings.title }}</div>
                    </div>
                </a>
            </div>
            {%- endif -%}
            {%- endfor -%}
        {%- else -%}
        <div class="pickup-cell-col2">
            <a href="#">
                <div class="index-pickup">
                    <img src="{{ '2611f4df3aa365e2a80918da92f33185.jpg' | asset_url }}" alt="">
                    <div class="index-pickup-desc">新作商品</div>
                </div>
            </a>
        </div>
