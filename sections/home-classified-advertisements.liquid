{% schema %}
{
    "name": "t:sections.index_home.settings.home-classified-advertisements.label",
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.index_home.settings.home-classified-advertisements-column.label",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.index_home.settings.home-classified-advertisements-column-image.label"
          },
          {
            "type": "text",
            "id": "title",
